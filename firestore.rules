rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email in ['kimsingjack@gmail.com', 'myhealthycircle@gmail.com'];
    }
    
    // RSVPs - anyone authenticated can read, only write to their own data
    match /rsvps/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Custom events - anyone can read approved, write their own, admin can write any
    match /custom_events/{eventId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (resource.data.createdByEmail == request.auth.token.email || isAdmin());
    }
    
    // Church events - authenticated users can read/write
    match /church_events/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // User profiles - users can read all, write their own OR admin can write any
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Private user data (notes, travel info)
      match /private_data/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
