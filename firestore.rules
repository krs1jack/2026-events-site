rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // RSVPs - anyone authenticated can read, only write to their own data
    match /rsvps/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Custom events - authenticated users can read/write
    match /custom_events/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Church events - authenticated users can read/write
    match /church_events/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // User profiles - users can read all, but only write their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Private user data (notes, travel info)
      match /private_data/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
