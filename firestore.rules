rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow authenticated users to read and write all event data
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write custom events
    match /customEvents/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write church events
    match /churchEvents/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
